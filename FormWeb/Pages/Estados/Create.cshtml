@model FormWeb.Pages.Estados.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Estado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Estado.Name" class="control-label"></label>
                <input asp-for="Estado.Name" class="form-control" />
                <span asp-validation-for="Estado.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado.Sigla" class="control-label"></label>
                <input asp-for="Estado.Sigla" class="form-control" />
